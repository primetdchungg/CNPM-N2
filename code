        }
        .sidebar {
            width: 200px;
            background-color: #263241;
            padding: 20px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            display: none;
        }
        .sidebar button {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: none;
            background-color: #98b7d9;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            text-align: left;
        }
        .sidebar button:hover {
            background-color: #c1d2e4;
        }
        .content-container {
            margin-left: 220px;
            padding: 20px;
            flex: 1;
        }
        .content {
            display: none;
