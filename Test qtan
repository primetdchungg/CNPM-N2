    <style>
        body { font-family: Arial, sans-serif; padding: 20px; max-width: 800px; margin: auto; }
        .step { display: none; }
        .active { display: block; }
        textarea, input, select { width: 100%; padding: 8px; margin: 10px 0; }
        button { padding: 10px; margin: 5px; cursor: pointer; }
    </style>
