<body>
    <h1>Hệ Thống Quản Lý Khám Bệnh</h1>
    <div id="step1" class="step active">
        <h2>1. Tiếp nhận & Đăng ký khám bệnh</h2>
        <input id="patientName" type="text" placeholder="Tên bệnh nhân">
        <input id="patientAge" type="number" placeholder="Tuổi">
        <input id="patientId" type="text" placeholder="Số hồ sơ bệnh án">
        <input id="department" type="text" placeholder="Khoa khám bệnh">
        <button onclick="assignQueueNumber()">Cấp số thứ tự</button>
        <p id="queueNumberDisplay"></p>
    </div>
    <div id="step2" class="step">
        <h2>2. Khám bệnh & Chẩn đoán lâm sàng</h2>
        <textarea id="symptoms" placeholder="Triệu chứng lâm sàng"></textarea>
        <textarea id="diagnosis" placeholder="Chẩn đoán sơ bộ"></textarea>
    </div>
    <div id="step3" class="step">
        <h2>3. Chỉ định & Xét nghiệm</h2>
        <input id="testType" type="text" placeholder="Loại xét nghiệm">
    </div>
    <div id="step4" class="step">
        <h2>4. Theo dõi kết quả xét nghiệm</h2>
        <textarea id="testResults" placeholder="Kết quả xét nghiệm"></textarea>
        <textarea id="finalDiagnosis" placeholder="Chẩn đoán cuối cùng"></textarea>
    </div>
    <div id="step5" class="step">
        <h2>5. Kê đơn thuốc & Điều trị</h2>
        <textarea id="treatment" placeholder="Phương pháp điều trị"></textarea>
        <textarea id="prescription" placeholder="Đơn thuốc"></textarea>
    </div>
    <div id="step6" class="step">
        <h2>6. Nhập viện & Quản lý điều trị nội trú</h2>
        <input id="bedNumber" type="text" placeholder="Số giường bệnh">
        <textarea id="dailyTracking" placeholder="Theo dõi hàng ngày"></textarea>
    </div>
    <div id="step7" class="step">
        <h2>7. Quản lý hồ sơ bệnh án & Xuất viện</h2>
        <textarea id="dischargeInfo" placeholder="Thông tin xuất viện & hướng dẫn"></textarea>
    </div>
    <div id="step8" class="step">
        <h2>8. Báo cáo & Thống kê</h2>
        <textarea id="report" placeholder="Tổng hợp báo cáo tình trạng bệnh viện"></textarea>
    </div>
    <div>
        <button onclick="prevStep()">Quay lại</button>
        <button onclick="nextStep()">Tiếp tục</button>
    </div>
    
    <script>
        let currentStep = 1;
        let queueNumber = 0;
        function showStep(step) {
            document.querySelectorAll('.step').forEach((el, index) => {
                el.classList.toggle('active', index + 1 === step);
            });
        }
        function nextStep() {
            if (currentStep < 8) { currentStep++; showStep(currentStep); }
        }
        function prevStep() {
            if (currentStep > 1) { currentStep--; showStep(currentStep); }
        }
        function assignQueueNumber() {
            queueNumber++;
            document.getElementById('queueNumberDisplay').innerText = "Số thứ tự của bạn: " + queueNumber;
        }
    </script>
</body>
</html>
