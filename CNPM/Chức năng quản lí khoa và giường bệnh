    <script>
        // Hàm thay đổi màu nền giường
        function changeBedColor(bedElement) {
            const currentColor = bedElement.style.backgroundColor || "#4CAF50"; // Màu mặc định là xanh lá cây
            let newColor;

            if (currentColor === "rgb(76, 175, 80)") { // Trống -> Đang sử dụng
                newColor = "#808080"; // Màu xám
            } else if (currentColor === "rgb(128, 128, 128)") { // Đang sử dụng -> Cần vệ sinh
                newColor = "#FF0000"; // Màu đỏ
            } else { // Cần vệ sinh -> Trống
                newColor = "#4CAF50"; // Màu xanh lá cây
            }

            bedElement.style.backgroundColor = newColor;
        }

        function toggleSubItems(department) {
            document.getElementById("sub-items").style.display = "grid";
            document.getElementById("main-items").style.display = "none";
            updateStaffInfo(department, 5, 10); // Cập nhật thông tin nhân viên
        }

        function showBeds(roomId) {
            document.querySelectorAll('.bed-items').forEach(el => el.style.display = 'none');
            document.getElementById(roomId).style.display = "grid";
            document.getElementById("sub-items").style.display = "none";
        }

        function goBackToSubItems() {
            document.querySelectorAll('.bed-items').forEach(el => el.style.display = 'none');
            document.getElementById("sub-items").style.display = "grid";
        }

        function goBackToMain() {
            document.getElementById("sub-items").style.display = "none";
            document.getElementById("main-items").style.display = "grid";
            document.getElementById("info-box").style.display = "none";
        }

        function updateStaffInfo(department, doctors, nurses) {
            const infoBox = document.getElementById("info-box");
            infoBox.innerHTML = `
                <div><strong>${department}</strong></div>
                <div>Số bác sỹ: ${doctors}</div>
                <div>Số y tá: ${nurses}</div>
            `;
            infoBox.style.display = "block";
        }
    </script>
</head>
